{% extends 'base.html.twig' %}

{% block body %}
    <h1>Dataset</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ dataset.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ dataset.name }}</td>
            </tr>
            <tr>
                <th>Reference</th>
                <td>{{ dataset.reference }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ dataset.description }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_dataset_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('admin_dataset_edit', { 'id': dataset.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
